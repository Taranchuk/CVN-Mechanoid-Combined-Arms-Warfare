		<autoSnapTargeting>false</autoSnapTargeting>
		<rotationSpeed>0.55</rotationSpeed>
		
		<projectileOffset>1.1</projectileOffset>
		
		<minRange>0</minRange>
		<maxRange>92.9</maxRange>
		<projectileShifting>
    		<li>-1.0</li>
    		<li>1.0</li>
		</projectileShifting>
		<fireModes>
			<li>
				<shotsPerBurst>2</shotsPerBurst>
				<ticksBetweenShots>0</ticksBetweenShots>
